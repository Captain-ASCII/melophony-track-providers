{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node", "jest"],
    "noImplicitAny": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@index": ["index.ts"],
      "@environment": ["Environment.ts"],
      "@providers/*": ["src/providers/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "include": [
    "src",
    "tests",
    "index.ts",
    "Environment.ts"
  ],
  "exclude" : [
    "build",
    "node_modules"
  ]
}